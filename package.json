{
  "name": "rustle.dev",
  "version": "1.0.0",
  "description": "AI-powered translation SDK for React & Next.js applications - Production Ready",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "Apache-2.0",
  "author": {
    "name": "Rustle.dev",
    "email": "support@rustle.dev",
    "url": "https://rustle.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rustledotdev/rustle.dev.git"
  },
  "bugs": {
    "url": "https://github.com/rustledotdev/rustle.dev/issues"
  },
  "homepage": "https://rustle.dev",
  "bin": {
    "rustle-engine": "./bin/rustle-engine.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lite": {
      "import": "./dist/lite.mjs",
      "require": "./dist/lite.js",
      "types": "./dist/lite.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./next": {
      "import": "./dist/next.mjs",
      "require": "./dist/next.js",
      "types": "./dist/next.d.ts"
    },
    "./engine": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/rustleEngine.mjs",
      "require": "./dist/cli/rustleEngine.js",
      "types": "./dist/cli/rustleEngine.d.ts"
    }
  },
  "files": [
    "dist/**",
    "bin/**",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "nextjs",
    "translation",
    "i18n",
    "ai",
    "typescript"
  ],

  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "glob": "^7.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test-setup.ts",
      "!src/**/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
